<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>View List User</title>
    <link rel="stylesheet" href="css/style.css">
    <link rel="stylesheet" href="css/home.css">
    <style>
        .btn{
            text-decoration: none;
            color: black;
            padding: 8px 20px;
            background-color: lightblue;
            border-radius: 5px;
            margin: 0 2px;
            border: 1px solid black;
            cursor: pointer;
        }
    </style>
</head>
<body>
    <div class="header">
        <div>
            <a href="/">HomePage</a>
            <a href="/view">View List User</a>
        </div>
        <div>
            <a href="/create">Create a User</a>
            <a href="/login">Login</a>
        </div>
    </div>

    <div style="display: flex; flex-direction: column; align-items: center;">
        <table>
            <tr>
                <th>Index</th>
                <th>ID</th>
                <th>Email</th>
                <th>Name</th>
                <th>Password</th>
                <th>Phone</th>
                <th>City</th>
                <th>Action</th>
            </tr>
            <% users.map((user , index) => { %>
                <tr>
                    <td><%= index + 1 %></td>
                    <td><%= user._id %></td>
                    <td><%= user.email %></td>
                    <td><%= user.name %></td>
                    <td><%= user.password %></td>
                    <td><%= user.phone %></td>
                    <td><%= user.city %></td>
                    <td style="display: flex;">
                        <a class="btn" href="/update/<%= user._id %>">Edit</a>  
                        <form class="btn" action="/user/deleteUser/<%= user._id %>" method="post">
                            <button style="padding: 0; border: none;background-color: transparent; cursor: pointer;">Delete</button>
                        </form>
                    </td>
                </tr>
            <% }); %>
        </table>
    </div>

    <script>
        // JavaScript code here
    </script>
</body>
</html>
